/*
========================================================================================
    Config options for running on OAMD Platform
========================================================================================
*/

profiles {
    amd_tower {
        params.outdir = ${workDir}/results
        process {
            withName:KRAKENTOOLS_MAKEKREPORT {
                cpus   = { check_max( 2                   , 'cpus'    ) }
                memory = { check_max( 8.GB  * task.attempt, 'memory'  ) }
                time   = { check_max( 8.h                 , 'time'    ) }
            }

        }
    }
}
